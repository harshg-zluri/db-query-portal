# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# PostgreSQL Database (Portal Data)
DATABASE_URL=postgresql://postgres:password@localhost:5432/db_query_portal

# Target PostgreSQL Instances (for query execution)
# Format: name|host|port|user|password
TARGET_PG_INSTANCES=prod-be-app-rds|localhost|5432|postgres|password

# Target MongoDB Instances (for query execution)
# Format: name|uri
TARGET_MONGO_INSTANCES=Zluri-ProdDB|mongodb://localhost:27017

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=100

# Script Execution
SCRIPT_TIMEOUT_MS=30000
SCRIPT_MAX_MEMORY_MB=128

# Slack (Week 2 - placeholder)
SLACK_BOT_TOKEN=
SLACK_APPROVAL_CHANNEL=
